  <script>
    // small animations on load
    window.addEventListener('load', ()=>{
      document.querySelectorAll('.fade').forEach((el,i)=>setTimeout(()=>el.classList.add('in'), 120*i));
    });

    function openMap(e){
      e && e.preventDefault();
      const url = 'https://maps.app.goo.gl/bcMYFy9SFNyMDPHJ7';
      window.open(url,'_blank');
    }

    function resetForm(){
      document.getElementById('rsvpForm').reset();
      document.getElementById('rsvp-status').textContent='Formulario reiniciado.';
    }

    document.getElementById('rsvpForm').addEventListener('submit', function(ev){
      ev.preventDefault();
      const name = document.getElementById('rsvp-name').value.trim();
      const mail = document.getElementById('rsvp-email').value.trim();
      const attend = document.getElementById('rsvp-attend').value;
      if(!name || !mail || !attend){
        document.getElementById('rsvp-status').textContent = 'Por favor completa los campos obligatorios.';
        return;
      }

      // Simular env√≠o (aqu√≠ puedes integrar con un endpoint/Google Forms/Sheet o email)
      const payload = {
        name,mail,attend,guests:document.getElementById('rsvp-guests').value||0,msg:document.getElementById('rsvp-msg').value||''
      };

      // mostrar agradecimiento
      document.getElementById('rsvp-status').textContent = '¬°Gracias, tu respuesta fue registrada!';
      // si quieres, almacenar en local para pruebas
      const stored = JSON.parse(localStorage.getItem('rsvps')||'[]');
      stored.push(payload);
      localStorage.setItem('rsvps', JSON.stringify(stored));

      // limpiar formulario despu√©s de 1.2s
      setTimeout(()=>{
        document.getElementById('rsvpForm').reset();
      },1200);
    });
  </script>
